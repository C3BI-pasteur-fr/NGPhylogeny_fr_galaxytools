<tool id="fasta_to_phylip" name="Fasta to Phylip" version="1.1.post1">
  <description>Convert fasta alignment file into phylip interleaved format</description>
  <edam_operations>
    <edam_operation>operation_2089</edam_operation>
  </edam_operations>
  <requirements>
    <requirement type="package" version="0.2.6">goalign</requirement>
  </requirements>
  <command>
    <![CDATA[
	     goalign reformat phylip -i $input -o $output
    ]]>
  </command>

  <inputs>
    <param name="input" format="fasta" type="data" label="Source file" help="fasta or phylip format"/>
  </inputs>
  <outputs>
    <data name="output" format="phylip" label="${input.name}"></data>
  </outputs>
  <help>
===========
Overview:
===========
Convert fasta alignment file into phylip interleaved format
  </help>
</tool>
