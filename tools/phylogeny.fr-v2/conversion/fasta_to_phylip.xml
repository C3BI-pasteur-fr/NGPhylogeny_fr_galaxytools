<tool id="fasta_to_phylip" name="Fasta to Phylip" >
	<description>file conversion</description>
	<command interpreter="python">
	#if $choice == "f2p":
	   fasta_to_phylip.py $input $output
	#else:
	   phylip_to_fasta.py 
	#end if
	    -i $input -o $output
	</command>
	<inputs>
		<param name="input" format="fasta,phylip" type="data" label="Source file" help="fasta or phylip format"/>
		<param name="choice" type="select" label="Choose format">
			<option value="f2p">Fasta to phylip</option>
			<option value="p2f">Phylip to fasta</option>
		</param>
	</inputs>
	<outputs>
		<data name="output" format="fasta" label="Converted file">
		    <change_format>
                <when input="choice" value="f2p" format="phylip"/>
            </change_format>
		</data>
	</outputs>
	<help>

-----

===========
Overview:
===========

Convert fasta file to phylip format and vice versa.
  
	</help>
</tool>
