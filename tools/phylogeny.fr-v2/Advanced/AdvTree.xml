<tool id="AdvTree-1.0" name="Adv Tree" version="1.0">
	<description></description>
	<command interpreter="bash">AdvTree.sh	-i $input
						-o $output
						-a $choice
						-b $gamma
						-c $NNI
						-d $SPR
						-e $boostrap
	</command>
	<inputs>
		<param name="input" format="txt" type="data" label="Source file" help="phylip file"/>
		<param name="choice" type="select" label="Choose the type of tree">
			<option value="PhProtSm">Prot max 1500 seq (PhyML LG)</option>
			<option value="FaProtBig">Prot min 1500 seq (FastME LG)</option> 
			<option value="PhNucSm">Nucleo max 1500 seq (PhyML HKY85)</option>
			<option value="FaNucBig">Nucleo min 1500 seq (FastME F84)</option>
		</param>
		<param name="gamma" type="boolean" label="Gamma distributed rates across sites" checked="true"/>
		<param name="NNI" type="boolean" label="Tree swapping NNI" checked="true"/>
		<param name="SPR" type="boolean" label="Tree swapping SPR"/>
		<param name="boostrap" type="boolean" label="Boostrap"/>
	</inputs>
	<outputs>
		<data format="nhx" name="output" label="Tree"/>
	</outputs>
	<help>
