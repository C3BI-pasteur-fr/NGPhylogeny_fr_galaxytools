<?xml version="1.0"?>
<tool_dependency>
    <package name="noisy" version="1.5.12">
        <install version="1.0">
            <actions>
				<action type="download_by_url">http://www.bioinf.uni-leipzig.de/Software/noisy/Noisy-1.5.12.tar.gz</action>
                <action type="shell_command">./configure --prefix=$INSTALL_DIR</action>
                <action type="shell_command">make</action>
                <action type="shell_command">make install</action>			                
                <action type="set_environment">
                    <environment_variable name="NOISY_ROOT_PATH" action="set_to">$INSTALL_DIR</environment_variable>
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin</environment_variable>
                </action>
            </actions>
        </install>
        <readme></readme>
    </package>
</tool_dependency>
