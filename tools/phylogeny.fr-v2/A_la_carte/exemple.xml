<tool id="Exemple-1.0" name="Exemple" version="1.0">
	<description>Exemple de brique</description>
	<command interpreter="bash">	-i $input
				#if $prog.progChoice == "clustalO" :
					$exempleConditional
				#end if 
					-o $output
	</command>
	<inputs>
		<param name="input" format="fasta" type="data" label="Source file"/>
		<conditional name="prog">
			<param name="progChoice" type="select">
				<option value="clustalO">Clustal Omega</option>
				<option value="muscle">Muscle</option>
			</param>
			<when value="clustalO">
				<param name="exempleConditional" type="boolean"/>
			</when>
			<when value="muscle"/>
		</conditional>
	</inputs>
	<outputs>
		<data name="output" format="fasta"  label="Aligned sequencies "/>
	</outputs>
	<help>

	</help>
</tool>

