<?xml version="1.0"?>
<tool_dependency>
    <package name="phyml" version="3.1">
        <install version="1.0">
            <actions_group>
                <actions os="darwin" architecture="x86_64">
                    <action type="download_by_url">
                        http://molevol.cmima.csic.es/castresana/Gblocks/Gblocks_OSX_0.91b.tar.Z
                    </action>
                    <action type="move_directory_files">
                        <source_directory>.</source_directory>
                        <destination_directory>$INSTALL_DIR/bin</destination_directory>
                    </action>
                    <action type="chmod">
                        <file mode="755">$INSTALL_DIR/bin/Gblocks</file>
                    </action>
                </actions>
                <actions os="linux" architecture="i386">
                    <action type="download_by_url">
                        http://molevol.cmima.csic.es/castresana/Gblocks/Gblocks_Linux_0.91b.tar.Z
                    </action>
                    <action type="move_directory_files">
                        <source_directory>.</source_directory>
                        <destination_directory>$INSTALL_DIR/bin</destination_directory>
                    </action>
                    <action type="chmod">
                        <file mode="755">$INSTALL_DIR/bin/Gblocks</file>
                    </action>
                </actions>
                <actions os="linux" architecture="x86_64">
                    <action type="download_by_url">
                        http://molevol.cmima.csic.es/castresana/Gblocks/Gblocks_Linux64_0.91b.tar.Z
                    </action>
                    <action type="move_directory_files">
                        <source_directory>.</source_directory>
                        <destination_directory>$INSTALL_DIR/bin</destination_directory>
                    </action>
                    <action type="chmod">
                        <file mode="755">$INSTALL_DIR/bin/Gblocks</file>
                    </action>
                </actions>
                <action type="set_environment">
                    <environment_variable name="GBLOCKS_ROOT_PATH" action="set_to">$INSTALL_DIR</environment_variable>
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin</environment_variable>
                </action>
            </actions_group>
        </install>
    </package>
</tool_dependency>